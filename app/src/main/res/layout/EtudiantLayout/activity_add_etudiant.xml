<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EtudiantCRUD.AddEtudiant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/code_etudiant"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Code Etudiant" />

        <EditText
            android:id="@+id/nom_etudiant"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nom" />

        <EditText
            android:id="@+id/prenom_etudiant"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Prenom" />

        <EditText
            android:id="@+id/date_naissace"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Date de naissance" />

        <Button
            android:id="@+id/addEtudiantBtn"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:text="Ajouter" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>