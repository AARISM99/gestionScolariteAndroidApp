<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context=".InscriptionCRUD.DetailsInscription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_corner"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="4"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:text="Consulter une inscription"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="500"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageScolarite"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/scolarite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <Spinner
                    android:id="@+id/details_etudiant_inscription_select"
                    android:layout_width="360dp"
                    android:layout_height="39dp"
                    android:dropDownWidth="match_parent" />


                <Spinner
                    android:id="@+id/details_niveau_inscription_select"
                    android:layout_width="360dp"
                    android:layout_height="39dp"
                    android:dropDownWidth="match_parent" />

                <Spinner
                    android:id="@+id/details_filiere_inscription_select"
                    android:layout_width="360dp"
                    android:layout_height="39dp"
                    android:dropDownWidth="match_parent" />

                <EditText
                    android:id="@+id/details_date_inscription_input"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Date inscription"
                    android:inputType="textPersonName" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/supp"
                        android:layout_width="210dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#DC2A2A"
                        android:text="supprimer" />

                    <Button
                        android:id="@+id/modifier"
                        android:layout_width="210dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#20A16D"
                        android:text="modifier" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>